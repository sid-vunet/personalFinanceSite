---
import BaseLayout from "./BaseLayout.astro";
import { Navigation } from "@/components/Navigation";

interface Props {
  title: string;
  description?: string;
  currentPath: string;
}

const { title, description, currentPath } = Astro.props;

// Mock user data - in production, this would come from auth
const user = {
  name: "Sidharth",
  email: "sidharthansidhu@gmail.com",
};
---

<BaseLayout title={title} description={description}>
  <div class="flex min-h-screen">
    <Navigation 
      client:load 
      currentPath={currentPath} 
      user={user}
      notificationCount={3}
    />
    
    <!-- Main Content -->
    <main class="flex-1 lg:ml-64">
      <!-- Page Header -->
      <header class="bg-card border-b border-border px-4 lg:px-8 py-6 mt-14 lg:mt-0">
        <h1 class="text-2xl font-bold text-foreground">{title}</h1>
      </header>
      
      <!-- Page Content -->
      <div class="p-4 lg:p-8 pb-24 lg:pb-8">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>
